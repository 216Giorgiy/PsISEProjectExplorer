<UserControl x:Class="PsISEProjectExplorer.ProjectExplorerWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:PsISEProjectExplorer.UI.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TextBlock HorizontalAlignment="Stretch" Margin="10,5,66,0" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Text="{Binding Path=RootDirectoryLabel}" VerticalAlignment="Top" />
        <TextBox Name="TextBoxSearchText" HorizontalAlignment="Stretch" Height="21" Margin="10,25,36,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Path=SearchText, UpdateSourceTrigger=PropertyChanged, Delay=150}" MaxLength="100"/>
        <Button Name="TextBoxSearchClear" VerticalAlignment="Top" Height="21" Margin="10,25,10,0" HorizontalAlignment="Right" Click="TextBoxSearchClear_Click">
            <Image Source="Resources/cancel.png" />
        </Button>
        <CheckBox Name="FreezeRootDir" HorizontalAlignment="Right" Margin="10,54,100,5" Content="Freeze root dir" VerticalAlignment="Top" Width="100" IsChecked="{Binding Path=FreezeRootDirectory}" />
        <CheckBox Name="SearchInFiles" HorizontalAlignment="Right" Margin="10,54,0,5" Content="Search in files" VerticalAlignment="Top" Width="100" IsChecked="{Binding Path=SearchInFiles}" />
        <TextBlock HorizontalAlignment="Left" Margin="10,54,0,5" TextWrapping="Wrap" Text="Indexing..." VerticalAlignment="Top" Width="70" Visibility="{Binding Path=IndexingInProgress, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <TreeView Name="SearchResults" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,75,10,10" ItemsSource="{Binding Path=TreeViewModel.TreeViewItems}" KeyUp="SearchResults_KeyUp" PreviewMouseLeftButtonDown="SearchResults_PreviewMouseLeftButtonDown" >
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}" DataType="{x:Type viewModel:TreeViewEntryItemModel}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Path=Image}" />
                        <TextBlock Text="{Binding Path=Name}" Margin="5,0,0,0" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding Path=IsExpanded, Mode=TwoWay}" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Style.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="IsSelectionActive" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter Property="FontWeight" Value="Bold" />
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
        <Button Name="ChangeWorkspace" Content="Change" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Top" Width="51" Click="ChangeWorkspace_Click"/>

    </Grid>
</UserControl>
